apiVersion: v1
kind: Pod
metadata:
  name: test-anserini
  namespace: imackieproject
spec:
  volumes:
  - name: nfs-access
    persistentVolumeClaim:
        claimName: imackievol1claim
  containers:
    - name: anserini-container
      image: iainmackie/anserini-trec
      imagePullPolicy: IfNotPresent
      volumeMounts: 
       - mountPath: /nfs/
         name: nfs-access
      env: 
       - name: "HTTP_PROXY"
       	  value: "http://myproxy.net:5187/"
       - name: "HTTP_PROXY"
      	  value: "http://myproxy.net:5187/"
      - name: "HTTP_PROXY"
      	  value: "http://myproxy.net:5187/"
  restartPolicy: Never

