apiVersion: v1
kind: Pod
metadata:
  name: test-anserini
  namespace: imackieproject
spec:
  volumes:
  - name: nfs-access
    persistentVolumeClaim:
        claimName: imackievol1claim
  containers:
    - name: anserini-container
      image: iainmackie/anserini-trec-test
      imagePullPolicy: IfNotPresent
      volumeMounts: 
       - mountPath: /nfs/
         name: nfs-access
  restartPolicy: Never


